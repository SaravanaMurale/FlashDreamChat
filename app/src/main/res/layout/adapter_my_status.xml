<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_5sdp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:paddingLeft="@dimen/_4sdp"
        android:paddingRight="@dimen/_4sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_3sdp"
            android:background="@drawable/message_item_border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_85sdp"
                android:text="sgssdgs" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/_15sdp"
                android:src="@drawable/ic_delete_24dp"
                android:tint="@color/colorPrimary" />
        </RelativeLayout>
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/statusImage"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_avatar"
        android:scaleType="centerCrop" />

    <com.hermes.chat.utils.CircularStatusView
        android:id="@+id/statusCircular"
        android:layout_width="@dimen/_42sdp"
        android:layout_height="@dimen/_42sdp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        app:portion_color="@color/colorPrimary"
        app:portion_spacing="6dp"
        app:portion_width="3dp"
        app:portions_count="1" />

</RelativeLayout>
